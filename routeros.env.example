# Configurações do Serviço RouterOS

# URL da API C# (backend principal)
API_C_SHARP_URL=http://localhost:5000

# Portas do serviço RouterOS
ROUTEROS_PORT=8765
ROUTEROS_HTTP_PORT=8001

# Intervalos de sincronização e monitoramento (em segundos)
SYNC_INTERVAL_SECONDS=60
MONITOR_INTERVAL_SECONDS=60

# Configurações de ping
PING_ATTEMPTS=3
PING_TIMEOUT_MS=1000
MAX_CONCURRENT_PINGS=10

# Configurações de conexão RouterOS
ROUTEROS_CONNECTION_TIMEOUT=30
ROUTEROS_MAX_CONNECTIONS=10

# SSL (true/false)
API_C_SHARP_VERIFY_SSL=true
